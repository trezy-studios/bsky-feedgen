{
  "private": true,
  "packageManager": "yarn@3.5.1",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "./packages/api",
    "./packages/filter",
    "./packages/lib"
  ],
  "scripts": {
    "build:lib": "yarn workspace @trezystudios/bsky-lib build",
    "build:filter": "yarn build:lib",
    "dev:filter": "yarn workspace @trezystudios/bsky-filter dev",
    "generate-types:lib": "yarn workspace @trezystudios/bsky-lib generate-types",
    "lint:api": "yarn workspace @trezystudios/bsky-api eslint ./src/",
    "lint:filter": "yarn workspace @trezystudios/bsky-filter eslint ./src/",
    "lint:lib": "yarn workspace @trezystudios/bsky-lib eslint ./src/",
    "start:filter": "yarn workspace @trezystudios/bsky-filter start",
    "publishFeed": "ts-node scripts/publishFeedGen.ts"
  },
  "devDependencies": {
    "better-docs": "^2.7.2",
    "eslint": "^8.38.0",
    "eslint-plugin-editorconfig": "^4.0.2",
    "eslint-plugin-jsdoc": "^41.1.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-perf": "^3.3.1",
    "eslint-plugin-react-prefer-function-component": "^3.1.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sort-class-members": "^1.17.1",
    "eslint-plugin-unused-imports": "^2.0.0"
  }
}
