{
  "private": true,
  "packageManager": "yarn@3.5.1",
  "workspaces": [
    "packages/api",
    "packages/common",
    "packages/feeds",
    "packages/koa-api",
    "packages/lib",
    "packages/mouth",
    "packages/scripts",
    "packages/sieve"
  ],
  "scripts": {
    "build:api": "yarn build:common",
    "build:common": "yarn workspace @trezystudios/bsky-common build",
    "build:sieve": "yarn build:common",
    "build": "yarn build:api && yarn build:common && yarn build:sieve",
    "dev:api": "yarn workspace @trezystudios/bsky-api dev",
    "dev:mouth": "yarn workspace @trezystudios/bsky-mouth dev",
    "dev:sieve": "yarn workspace @trezystudios/bsky-sieve dev",
    "dev": "yarn dev:api && yarn dev:sieve && yarn dev:mouth",
    "generate-types:common": "yarn workspace @trezystudios/bsky-common generate-types",
    "generate-types:feeds": "yarn workspace @trezystudios/bsky-feeds generate-types",
    "generate-types:koa-api": "yarn workspace @trezystudios/koa-api generate-types",
    "generate-types:lib": "yarn workspace @trezystudios/bsky-lib generate-types",
    "generate-types": "yarn generate-types:common && yarn generate-types:feeds && yarn generate-types:koa-api && yarn generate-types:lib",
    "lint:api": "yarn workspace @trezystudios/bsky-api eslint ./src/",
    "lint:common": "yarn workspace @trezystudios/bsky-common eslint ./src/",
    "lint:lib": "yarn workspace @trezystudios/bsky-common eslint ./src/",
    "lint:mouth": "yarn workspace @trezystudios/bsky-mouth eslint ./src/",
    "lint:sieve": "yarn workspace @trezystudios/bsky-sieve eslint ./src/",
    "lint": "yarn lint:api && yarn lint:common && yarn lint:lib && yarn lint:mouth && yarn lint:sieve",
    "start:api": "yarn workspace @trezystudios/bsky-api start",
    "start:mouth": "yarn workspace @trezystudios/bsky-mouth start",
    "start:sieve": "yarn workspace @trezystudios/bsky-sieve start",
    "start": "yarn start:api && yarn start:mouth && yarn start:sieve"
  },
  "devDependencies": {
    "better-docs": "^2.7.2",
    "eslint": "^8.44.0",
    "eslint-plugin-editorconfig": "^4.0.3",
    "eslint-plugin-jsdoc": "^46.4.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-perf": "^3.3.1",
    "eslint-plugin-react-prefer-function-component": "^3.1.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sort-class-members": "^1.18.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
