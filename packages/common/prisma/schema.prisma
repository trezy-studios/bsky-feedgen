generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Block {
  did          String // muted user's did
  listOwnerDID String // list owner's did
  rkey         String @id // rkey of the list item

  @@unique([listOwnerDID, rkey])
}

model Feed {
  description String
  name        String
  ownerDID    String
  rkey        String  @id @unique
  skeets      Skeet[]
}

model FirehoseCursor {
  seq Int @id @unique
}

model OptOut {
  did String @id @unique
}

model Skeet {
  cid         String
  did         String?
  feeds       Feed[]
  indexedAt   DateTime? @default(now())
  replyParent String?
  replyRoot   String?
  uri         String    @id @unique
}
